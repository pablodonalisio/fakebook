<div class="card mt-4 col-4">
  <div class="card-header py-1 d-flex justify-content-between">
    <div></div>
    <h5 class="card-title"><%= current_user.name%></h5>
    <div class="header-buttons">
      <%= link_to "Edit", edit_profile_path, class: "btn btn-outline-primary" %>
    </div>
  </div>
  <div class="card-body mt-0">
    <ul class="list-group">
      <li class="list-group-item list-group-item-primary">Birthday: <%= @profile.birthday %></li>
      <li class="list-group-item list-group-item-primary">Country: <%= @profile.country %></li>
      <li class="list-group-item list-group-item-primary">City: <%= @profile.city %></li>
    </ul>
  </div>
</div>